
{
    "$schema": "https://swc.rs/schema.json",
    "sourceMaps": true,
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "baseUrl": "./",
        "paths": {
            "@_common/*": ["./src/_common/*"],
            "@_config/*": ["./src/_config/*"],
            "@_app/*": ["./src/_app/*"],
            "@auth/*": ["./src/auth/*"],
            "@users/*": ["./src/users/*"],
            "@root/*": ["./src/root/*"]
        }
    },
    "minify": false
}